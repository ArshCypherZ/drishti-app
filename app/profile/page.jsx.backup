'use client';
import React from 'react';
import ProtectedRoute from '../components/ProtectedRoute';
import ScreenWrapper from '../components/ScreenWrapper';
import GlassCard from '../components/GlassCard';
import Button from '../components/Button';
import { useApp } from '../context/AppContext';
import { useAuth } from '../context/AuthContext';

const ProfileScreen = () => {
  const { dispatch } = useApp();
  const { user, logout } = useAuth();

  const handleLogout = async () => {
    await logout();
    // The AuthContext will handle the redirect
  };

  return (
    <ProtectedRoute>
      <ScreenWrapper>
        <div className="space-y-6">
          <GlassCard>
            <h1 className="text-2xl font-bold text-white mb-4">Profile</h1>
            
            {user && (
              <div className="space-y-4">
                <div className="flex items-center space-x-4">
                  <div className="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center">
                    <span className="text-2xl font-bold text-white">
                      {user.first_name?.[0]}{user.last_name?.[0]}
                    </span>
                  </div>
                  <div>
                    <h2 className="text-xl font-semibold text-white">
                      {user.first_name} {user.last_name}
                    </h2>
                    <p className="text-white/70">@{user.username}</p>
                  </div>
                </div>

                <div className="grid grid-cols-2 gap-4">
                  <div className="bg-white/10 rounded-lg p-4">
                    <p className="text-white/70 text-sm">Total Points</p>
                    <p className="text-2xl font-bold text-white">{user.total_points || 0}</p>
                  </div>
                  <div className="bg-white/10 rounded-lg p-4">
                    <p className="text-white/70 text-sm">Current Streak</p>
                    <p className="text-2xl font-bold text-white">{user.current_streak || 0}</p>
                  </div>
                </div>

                <div className="space-y-2">
                  <p className="text-white/70 text-sm">Email</p>
                  <p className="text-white">{user.email}</p>
                </div>

                <div className="space-y-2">
                  <p className="text-white/70 text-sm">Sessions Completed</p>
                  <p className="text-white">{user.sessions || 0}</p>
                </div>
              </div>
            )}
          </GlassCard>

          <GlassCard>
            <div className="space-y-4">
              <Button 
                onClick={() => dispatch({ type: 'SET_VIEW', payload: 'home' })}
                variant="secondary"
                className="w-full"
              >
                Back to Home
              </Button>
              
              <Button 
                onClick={handleLogout}
                variant="danger"
                className="w-full"
              >
                Logout
              </Button>
            </div>
          </GlassCard>
        </div>
      </ScreenWrapper>
    </ProtectedRoute>
  );
};

export default ProfileScreen;
