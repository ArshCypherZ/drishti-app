'use client';
import React from 'react';
import ProtectedRoute from '../components/ProtectedRoute';
import ScreenWrapper from '../components/ScreenWrapper';
import GlassCard from '../components/GlassCard';
import Button from '../components/Button';
import Input from '../components/Input';
import { useApp } from '../context/AppContext';

const PerspectiveScreen = () => {
  const { state, dispatch } = useApp();
  const [userInput, setUserInput] = React.useState('');

  const handleSubmit = () => {
    if (userInput.trim()) {
      dispatch({ type: 'SET_PERSPECTIVE_INPUT', payload: userInput });
      dispatch({ type: 'SET_VIEW', payload: 'home' });
    }
  };

  return (
    <ProtectedRoute>
      <ScreenWrapper>
        <GlassCard>
          <h1 className="text-2xl font-bold text-white mb-4">New Perspective Session</h1>
          <p className="text-white/80 mb-6">
            Describe a challenge or situation you're facing. We'll help you explore different perspectives.
          </p>
          
          <div className="space-y-4">
            <Input
              type="textarea"
              placeholder="What's on your mind? Share your thoughts, feelings, or challenges..."
              value={userInput}
              onChange={(e) => setUserInput(e.target.value)}
              rows={4}
            />
            
            <div className="flex gap-3">
              <Button 
                onClick={handleSubmit}
                disabled={!userInput.trim()}
                className="flex-1"
              >
                Start Session
              </Button>
              <Button 
                onClick={() => dispatch({ type: 'SET_VIEW', payload: 'home' })}
                variant="secondary"
              >
                Cancel
              </Button>
            </div>
          </div>
        </GlassCard>
      </ScreenWrapper>
    </ProtectedRoute>
  );
};

export default PerspectiveScreen;
